<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/title_bar" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:layout_gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/search_title"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <AutoCompleteTextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/search_input"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:background="@color/bright_foreground_inverse_material_light" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgSearch"
                android:src="@drawable/ic_search_white_24dp"
                android:background="@color/icubeHeader"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task No  "
                android:id="@+id/task_no_title"
                android:layout_margin="5dp"
                android:singleLine="false"
                android:textStyle="bold" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/task_no_value"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc:"
                android:id="@+id/task_desc_title"
                android:layout_margin="5dp"
                android:singleLine="false"
                android:textStyle="bold" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/task_desc_value"
                android:layout_margin="5dp" />

        </LinearLayout>

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/action_item"
            android:id="@+id/action_list_title" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="330dp"
            android:id="@+id/actionList"
            android:scrollbars="vertical"
            android:choiceMode="singleChoice"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@color/gray" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc"
                android:id="@+id/action_desc_title"
                android:layout_margin="5dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/action_desc_value"
                android:scrollbars="horizontal"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_gravity="center_vertical">

            <Button
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:id="@+id/btnDone"
                android:background="@color/icubeHeader"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:text="Done"
                android:textColor="@color/colorWhite"
                android:textSize="20dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:id="@+id/imgBtn2"
                android:background="@color/icubeHeader"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:id="@+id/imgNote"
                android:background="@color/icubeHeader"
                android:src="@drawable/ic_note_white_24dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="fill_parent"
                android:id="@+id/imgDoc"
                android:background="@color/icubeHeader"
                android:src="@drawable/ic_description_white_24dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
