<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:id="@+id/action_element"
    android:background="@drawable/menu_item_background_selector">

    <!--TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/action_no"
        android:layout_gravity="center_vertical"
        android:padding="10dp" /-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_status"
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="2dp">

            <TextView
                android:id="@+id/action_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/action_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="3dp"
                android:maxLines="1" />

            <TextView
                android:id="@+id/action_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="@android:color/holo_blue_dark" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>